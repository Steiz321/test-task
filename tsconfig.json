{
  "compilerOptions": {
    "experimentalDecorators": true,
    "strict": true,
    "typeRoots": [
      "@types/node",
      "./src/types"
    ],
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"]
}
